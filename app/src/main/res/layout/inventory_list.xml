<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Control_inventory_page">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/inventory_num"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:background="@drawable/table_temp"
            android:backgroundTint="#EDE3E3"
            android:fontFamily="@font/nanumsquareneo_variable"
            android:gravity="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/menu_name"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:background="@drawable/table_temp"
            android:fontFamily="@font/nanumsquareneo_variable"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/menu_price"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:background="@drawable/table_temp"
            android:fontFamily="@font/nanumsquareneo_variable"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/menu_sort"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:background="@drawable/table_temp"
            android:fontFamily="@font/nanumsquareneo_variable"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/menu_status"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:background="@drawable/table_temp"
            android:fontFamily="@font/nanumsquareneo_variable"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/menu_image"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:background="@drawable/table_temp"
            android:fontFamily="@font/nanumsquareneo_variable"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

