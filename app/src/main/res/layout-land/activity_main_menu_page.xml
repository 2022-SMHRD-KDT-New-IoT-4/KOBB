<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    tools:context=".Main_menu_page">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="110dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/kobbicon" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="상호명"
                android:textColor="#FF5555"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#F7F7F7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline3"
                app:layout_constraintVertical_bias="1.0" />

            <ImageButton
                android:id="@+id/btn_cart_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F7F7F7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline3"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/btn_cart_page"
                app:layout_constraintTop_toTopOf="@+id/guideline3"
                app:srcCompat="@drawable/casher" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="어떤 메뉴를 주문할까요?"
                android:textColor="#504E4E"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/btn_cart_page"
                app:layout_constraintTop_toTopOf="@+id/guideline3" />

            <Button
                android:id="@+id/btn_small_menu_page1"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_radius"
                android:backgroundTint="#FF5555"
                android:text="커피"
                android:textColor="#F7F7F7"
                android:textSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <Button
                android:id="@+id/btn_small_menu_page2"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_radius"
                android:backgroundTint="#FF5555"
                android:text="라떼"
                android:textColor="#F7F7F7"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_small_menu_page1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btn_small_menu_page1"
                app:layout_constraintTop_toBottomOf="@+id/btn_small_menu_page1" />

            <Button
                android:id="@+id/btn_small_menu_page3"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_radius"
                android:backgroundTint="#FF5555"
                android:text="차"
                android:textColor="#F7F7F7"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_small_menu_page2"
                app:layout_constraintStart_toStartOf="@+id/btn_small_menu_page2"
                app:layout_constraintTop_toBottomOf="@+id/btn_small_menu_page2" />

            <Button
                android:id="@+id/btn_small_menu_page5"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_radius"
                android:backgroundTint="#FF5555"
                android:text="요거트"
                android:textColor="#F7F7F7"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_small_menu_page4"
                app:layout_constraintStart_toStartOf="@+id/btn_small_menu_page4"
                app:layout_constraintTop_toBottomOf="@+id/btn_small_menu_page4" />

            <Button
                android:id="@+id/btn_small_menu_page4"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_radius"
                android:backgroundTint="#FF5555"
                android:text="에이드"
                android:textColor="#F7F7F7"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <Button
                android:id="@+id/button10"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_radius"
                android:backgroundTint="#FF5555"
                android:text="디저트"
                android:textColor="#F7F7F7"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_small_menu_page5"
                app:layout_constraintStart_toStartOf="@+id/btn_small_menu_page5"
                app:layout_constraintTop_toBottomOf="@+id/btn_small_menu_page5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>