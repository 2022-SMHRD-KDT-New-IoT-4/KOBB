                android:layout_marginStart="260dp"
                android:layout_marginTop="10dp"
                android:queryHint="이름/거래처 입력"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
                app:layout_constraintStart_toStartOf="parent"
